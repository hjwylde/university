    <!-- ============= -->
    <!-- Regexp checks -->
    <!-- ============= -->

    <!-- Check that no task tags other than TODO is used -->
    <module name="RegexpSingleline">
        <property name="severity" value="info"/>
        <property name="format" value="((//)|(\*)) (?!TODO)[A-Z]+:" />
        <property name="message" value="TODO is preferred to other task tags." />
    </module>
    <!-- Check that there is no trailing whitespace -->
    <!-- <module name="RegexpSingleline">
        <property name="severity" value="info"/>
        <property name="format" value="\s+$" />
        <property name="message" value="Trailing whitespace at end of line." />
    </module> -->
    <!-- TODO: Verify that this is correct -->
    <!-- Check that there are no illegal whitespace characters-->
    <module name="RegexpSingleline">
        <property name="format" value="(\f|\t|\r)" />
        <property name="message" value="Illegal whitespace character." />
    </module>
    <!-- Check that the @since tag is in the right format -->
    <module name="RegexpSingleline">
        <property name="severity" value="info"/>
        <property name="format" value="^ +\* @since .+, (?!([0-3][0-9]/[0-1][0-9]/20[0-9][0-9])).+$" />
        <property name="message" value="Format of the @since tag is invalid." />
    </module>
